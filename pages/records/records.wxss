/* pages/records/records.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 统计信息 */
.stats-section {
  display: flex;
  background-color: #fff;
  padding: 40rpx 0;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 记录区域 */
.records-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
}

/* 记录列表 */
.records-list {
  display: flex;
  flex-direction: column;
}

.record-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-image {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.image-placeholder {
  font-size: 60rpx;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.record-date {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.record-weather {
  font-size: 24rpx;
  color: #999;
  padding: 5rpx 15rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
}

.record-spot {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.record-details {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.detail-item {
  font-size: 24rpx;
  color: #999;
  padding: 5rpx 15rpx;
  background-color: #f9f9f9;
  border-radius: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.empty-tip {
  font-size: 24rpx;
  color: #ccc;
}
