/* pages/spots/spots.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 0 !important;
  padding-bottom: 40rpx !important;
  width: 100% !important;
  box-sizing: border-box;
  margin: 0 !important;
  display: block !important;
  align-items: stretch !important;
  justify-content: flex-start !important;
}

/* 搜索栏 */
.search-header {
  background-color: #fff;
  padding: 20rpx 30rpx;
  padding-top: 20rpx;
  margin-top: 0;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  width: 100%;
  box-sizing: border-box;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding: 16rpx 24rpx;
}

.search-icon {
  font-size: 28rpx;
  color: #999;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-clear {
  font-size: 24rpx;
  color: #999;
  margin-left: 12rpx;
  padding: 4rpx;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 0;
}

.filter-text {
  font-size: 26rpx;
  color: #666;
  margin-right: 8rpx;
}

.filter-arrow {
  font-size: 20rpx;
  color: #999;
}

/* 钓场列表 */
.spot-list {
  padding: 20rpx 30rpx;
}

.spot-card {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.spot-image-wrapper {
  position: relative;
  width: 100%;
  height: 360rpx;
  overflow: hidden;
}

.spot-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-placeholder {
  font-size: 120rpx;
  opacity: 0.8;
}

.spot-rating-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10rpx);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
}

.rating-star {
  font-size: 20rpx;
  margin-right: 4rpx;
}

.rating-value {
  font-size: 24rpx;
  color: #fff;
  font-weight: 600;
}

.spot-distance-badge {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10rpx);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
}

.distance-text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
}

.spot-content {
  padding: 24rpx;
}

.spot-header {
  margin-bottom: 12rpx;
}

.spot-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.spot-address {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

/* 标签 */
.spot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  padding: 6rpx 14rpx;
  background-color: #e8f4ff;
  border-radius: 20rpx;
}

.tag-icon {
  font-size: 20rpx;
  margin-right: 4rpx;
}

.tag-text {
  font-size: 22rpx;
  color: #667eea;
}

/* 底部信息 */
.spot-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.spot-price-wrapper {
  display: flex;
  align-items: baseline;
}

.price-text {
  font-size: 32rpx;
  color: #ff4757;
  font-weight: 700;
}

.spot-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
}

.phone-btn {
  background-color: #667eea;
  color: #fff;
}

.navigate-btn {
  background-color: #52c41a;
  color: #fff;
}

.btn-icon {
  font-size: 24rpx;
  margin-right: 5rpx;
}

.btn-text {
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
