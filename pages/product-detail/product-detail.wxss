/* pages/product-detail/product-detail.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.container {
  padding: 0 !important;
  padding-bottom: 120rpx !important;
  width: 100% !important;
  box-sizing: border-box;
  background-color: #fff;
  margin: 0 !important;
  display: block !important;
  align-items: stretch !important;
  justify-content: flex-start !important;
  height: auto !important;
}

/* 商品图片轮播 */
.product-swiper {
  width: 100%;
  height: 750rpx;
  background-color: #f5f5f5;
}

.swiper-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-placeholder {
  font-size: 200rpx;
  opacity: 0.6;
}

/* 商品基本信息 */
.product-info {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.price-section {
  display: flex;
  align-items: baseline;
  margin-bottom: 16rpx;
}

.price-symbol {
  font-size: 28rpx;
  color: #ff4757;
  font-weight: 600;
}

.product-price {
  font-size: 48rpx;
  color: #ff4757;
  font-weight: 700;
  margin: 0 8rpx;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.5;
  margin-bottom: 8rpx;
  display: block;
}

.product-subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  display: block;
}

/* 商品标签 */
.product-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.tag-item {
  padding: 6rpx 14rpx;
  background-color: #fff3e0;
  border-radius: 20rpx;
}

.tag-text {
  font-size: 22rpx;
  color: #ff9800;
}

/* 规格选择 */
.spec-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.spec-label {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.label-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.spec-value {
  font-size: 26rpx;
  color: #999;
}

.arrow-right {
  font-size: 32rpx;
  color: #999;
}

/* 数量选择 */
.quantity-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.quantity-label {
  font-size: 28rpx;
  color: #333;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}

.quantity-btn.minus {
  border-radius: 8rpx 0 0 8rpx;
}

.quantity-btn.plus {
  border-radius: 0 8rpx 8rpx 0;
}

.quantity-btn .btn-text {
  font-size: 32rpx;
  color: #333;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  border-top: 1rpx solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0;
  text-align: center;
  font-size: 28rpx;
  color: #333;
}

/* 商品详情 */
.detail-section {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.detail-content {
  padding: 20rpx 0;
}

.detail-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  display: block;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  width: 100%;
  box-sizing: border-box;
}

.bar-left {
  display: flex;
  gap: 20rpx;
  margin-right: 20rpx;
}

.bar-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
}

.bar-btn .btn-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.bar-btn .btn-text {
  font-size: 22rpx;
  color: #666;
}

.bar-right {
  display: flex;
  flex: 1;
  gap: 20rpx;
}

.buy-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.buy-btn .btn-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.add-cart {
  background-color: #ff9800;
}

.buy-now {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 规格选择弹窗 */
.spec-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.modal-content {
  width: 100%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.modal-header {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.modal-image {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.modal-image .image-placeholder {
  font-size: 60rpx;
}

.modal-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.modal-price {
  font-size: 32rpx;
  color: #ff4757;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.modal-name {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.modal-spec {
  font-size: 24rpx;
  color: #999;
}

.modal-close {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.spec-group {
  margin-bottom: 40rpx;
}

.spec-group-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 20rpx;
  display: block;
}

.spec-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.spec-option {
  padding: 16rpx 32rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background-color: #fff;
  min-width: 120rpx;
  text-align: center;
}

.spec-option.active {
  border-color: #667eea;
  background-color: #e8f4ff;
}

.option-text {
  font-size: 26rpx;
  color: #333;
}

.spec-option.active .option-text {
  color: #667eea;
  font-weight: 600;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.confirm-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-btn .btn-text {
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
}
