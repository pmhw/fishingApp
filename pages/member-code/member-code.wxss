/* pages/member-code/member-code.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
  padding-top: 10rpx;
}

/* 顶部Header */
.top-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-top: env(safe-area-inset-top);
  padding-bottom: 30rpx;
  color: #fff;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.header-icon {
  font-size: 36rpx;
}

/* 主卡片 */
.main-card {
  background-color: #fff;
  margin: 0 20rpx 20rpx 20rpx;
  margin-top: 0;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 标题区域 */
.card-title-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
}

.card-subtitle {
  font-size: 28rpx;
  color: #333;
}

/* 支持说明 */
.support-info {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.check-icon {
  color: #667eea;
  font-size: 32rpx;
  margin-right: 10rpx;
  font-weight: bold;
}

.support-text {
  font-size: 26rpx;
  color: #666;
}

/* 二维码区域 */
.qr-code-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.qr-code-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.qr-code-main {
  width: 500rpx;
  height: 500rpx;
  background-color: #fff;
  border: 4rpx solid #000;
  border-radius: 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}

.qr-code-placeholder {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qr-pattern {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.qr-square {
  display: flex;
  flex: 1;
}

.qr-dot {
  flex: 1;
  border: 1rpx solid #f0f0f0;
}

.qr-logo {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #2196F3 0%, #21CBF3 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 8rpx solid #fff;
}

.logo-icon {
  font-size: 60rpx;
}

/* 刷新按钮 */
.refresh-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #666;
  font-size: 26rpx;
}

.refresh-icon {
  font-size: 32rpx;
}

.refresh-text {
  font-size: 26rpx;
}

/* 警告提示 */
.warning-section {
  display: flex;
  align-items: center;
  background-color: #FFF3E0;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  border-left: 4rpx solid #FF9800;
}

.warning-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
  color: #FF9800;
}

.warning-text {
  font-size: 24rpx;
  color: #FF6F00;
  flex: 1;
}

/* 开通服务按钮 */
.service-btn {
  width: 100%;
  padding: 25rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  text-align: center;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

/* 折扣信息 */
.discount-section {
  margin-bottom: 40rpx;
}

.discount-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.discount-text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.consumption-text {
  font-size: 26rpx;
  color: #666;
}

/* 折扣进度条 */
.discount-progress {
  display: flex;
  gap: 10rpx;
  height: 80rpx;
  position: relative;
}

.progress-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}

.progress-bar {
  height: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 10rpx;
  transition: all 0.3s;
}

.progress-item.active .progress-bar {
  background-color: #667eea !important;
}

.progress-label {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  margin-bottom: 5rpx;
}

.progress-amount {
  font-size: 20rpx;
  color: #999;
  text-align: center;
}

/* 底部导航 */
.bottom-nav {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.nav-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
}

.nav-divider {
  width: 1rpx;
  background-color: #f0f0f0;
  margin: 0 20rpx;
}

.nav-icon {
  font-size: 32rpx;
}

.nav-text {
  font-size: 28rpx;
  color: #333;
}

.nav-arrow {
  font-size: 36rpx;
  color: #999;
  margin-left: 10rpx;
}
