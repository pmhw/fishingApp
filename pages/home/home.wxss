/* pages/home/home.wxss */
.container {
  padding-top: 0;
  padding-bottom: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

/* 顶部导航栏 */
.top-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-left {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.location-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 50%;
  flex-shrink: 0;
}

.location-icon {
  font-size: 32rpx;
}

.region-selector {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  width: fit-content;
}

.region-text {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.arrow-down {
  font-size: 20rpx;
  color: #999;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.ranking-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
}

.ranking-icon {
  font-size: 28rpx;
  margin-right: 5rpx;
}

.ranking-text {
  font-size: 24rpx;
  color: #333;
}

/* 天气信息卡片 - 高级玻璃雾化效果 */
.weather-card {
  position: relative;
  margin: 0 20rpx 20rpx 20rpx;
  padding: 40rpx;
  border-radius: 28rpx;
  color: #fff;
  overflow: hidden;
  /* 玻璃雾化背景 - 根据天气类型变化 */
  background: linear-gradient(
    135deg, 
    rgba(102, 126, 234, 0.88) 0%, 
    rgba(118, 75, 162, 0.88) 50%,
    rgba(102, 126, 234, 0.82) 100%
  );
  backdrop-filter: blur(25rpx);
  -webkit-backdrop-filter: blur(25rpx);
  /* 高级边框 */
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  /* 多层高级阴影 */
  box-shadow: 
    0 12rpx 40rpx rgba(0, 0, 0, 0.15),
    0 6rpx 20rpx rgba(0, 0, 0, 0.1),
    0 3rpx 10rpx rgba(0, 0, 0, 0.08),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.3),
    inset 0 -2rpx 0 rgba(0, 0, 0, 0.1);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 不同天气类型的背景色 */
.weather-card.weather-sunny {
  background: linear-gradient(
    135deg, 
    rgba(255, 200, 87, 0.9) 0%, 
    rgba(255, 159, 64, 0.9) 50%,
    rgba(255, 200, 87, 0.85) 100%
  );
}

.weather-card.weather-rainy {
  background: linear-gradient(
    135deg, 
    rgba(100, 116, 139, 0.9) 0%, 
    rgba(71, 85, 105, 0.9) 50%,
    rgba(100, 116, 139, 0.85) 100%
  );
}

.weather-card.weather-cloudy {
  background: linear-gradient(
    135deg, 
    rgba(148, 163, 184, 0.9) 0%, 
    rgba(100, 116, 139, 0.9) 50%,
    rgba(148, 163, 184, 0.85) 100%
  );
}

.weather-card.weather-snowy {
  background: linear-gradient(
    135deg, 
    rgba(226, 232, 240, 0.9) 0%, 
    rgba(203, 213, 225, 0.9) 50%,
    rgba(226, 232, 240, 0.85) 100%
  );
}

/* 动态背景层容器 */
.weather-bg-animation {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
  overflow: hidden;
  pointer-events: none;
}

/* 背景渐变层 - 增强玻璃质感 */
.weather-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(
    circle at 30% 30%,
    rgba(255, 255, 255, 0.2) 0%,
    transparent 60%
  );
  z-index: 0;
  pointer-events: none;
  animation: shimmer 8s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { transform: translate(0, 0) rotate(0deg); opacity: 0.3; }
  50% { transform: translate(20rpx, 20rpx) rotate(180deg); opacity: 0.5; }
}

/* 顶部高光效果 */
.weather-card::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.5) 50%,
    transparent 100%
  );
  z-index: 1;
}

.weather-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 2;
}

.weather-left {
  display: flex;
  flex-direction: column;
  position: relative;
  z-index: 2;
}

.temperature {
  font-size: 80rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  text-shadow: 
    0 3rpx 10rpx rgba(0, 0, 0, 0.25),
    0 1rpx 3rpx rgba(0, 0, 0, 0.15),
    0 0 20rpx rgba(255, 255, 255, 0.3);
  letter-spacing: -2rpx;
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 1) 0%,
    rgba(255, 255, 255, 0.9) 100%
  );
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.2));
}

.weather-type {
  font-size: 30rpx;
  opacity: 0.95;
  font-weight: 500;
  text-shadow: 
    0 2rpx 6rpx rgba(0, 0, 0, 0.2),
    0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 1rpx;
}

.weather-icon-wrapper {
  position: relative;
  z-index: 2;
}

.weather-icon {
  font-size: 100rpx;
  display: block;
  filter: drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.3));
  animation: float 3s ease-in-out infinite;
}

.weather-icon-sunny {
  animation: rotate 20s linear infinite, float 3s ease-in-out infinite;
}

.weather-icon-rainy {
  animation: shake 0.5s ease-in-out infinite, float 3s ease-in-out infinite;
}

.weather-icon-cloudy {
  animation: drift 4s ease-in-out infinite, float 3s ease-in-out infinite;
}

.weather-icon-snowy {
  animation: float 2s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-5rpx); }
  75% { transform: translateX(5rpx); }
}

@keyframes drift {
  0%, 100% { transform: translateX(0); }
  50% { transform: translateX(10rpx); }
}

.weather-details {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  position: relative;
  z-index: 2;
}

.weather-item {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 120rpx;
  /* 高级玻璃雾化子元素 */
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(15rpx);
  -webkit-backdrop-filter: blur(15rpx);
  padding: 18rpx 15rpx;
  border-radius: 18rpx;
  border: 1.5rpx solid rgba(255, 255, 255, 0.35);
  box-shadow: 
    0 6rpx 16rpx rgba(0, 0, 0, 0.12),
    0 3rpx 8rpx rgba(0, 0, 0, 0.08),
    inset 0 1.5rpx 0 rgba(255, 255, 255, 0.25),
    inset 0 -1rpx 0 rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 2;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
}

/* 天气项内部高光 */
.weather-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.4) 50%,
    transparent 100%
  );
  z-index: 1;
}

/* 天气项点击效果 */
.weather-item:active {
  background: rgba(255, 255, 255, 0.28);
  transform: scale(0.97);
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.15),
    0 2rpx 6rpx rgba(0, 0, 0, 0.1),
    inset 0 1.5rpx 0 rgba(255, 255, 255, 0.3);
}

.weather-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
  font-weight: 400;
  text-shadow: 
    0 1rpx 3rpx rgba(0, 0, 0, 0.15),
    0 0 10rpx rgba(255, 255, 255, 0.2);
  letter-spacing: 0.5rpx;
}

.weather-value {
  font-size: 30rpx;
  font-weight: 600;
  text-shadow: 
    0 2rpx 6rpx rgba(0, 0, 0, 0.2),
    0 1rpx 2rpx rgba(0, 0, 0, 0.1),
    0 0 15rpx rgba(255, 255, 255, 0.25);
  letter-spacing: 0.5rpx;
}

/* ========== 动态背景效果 ========== */

/* 晴天：光晕效果 */
.sun-rays {
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200%;
  height: 200%;
  background: radial-gradient(
    circle,
    rgba(255, 255, 255, 0.3) 0%,
    rgba(255, 255, 255, 0.1) 30%,
    transparent 70%
  );
  animation: pulse 4s ease-in-out infinite;
  z-index: 1;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.5; }
  50% { transform: scale(1.2); opacity: 0.8; }
}

/* 晴天：粒子效果 */
.particles {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.particle {
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(255, 255, 255, 0.8);
  animation: particleFloat 6s ease-in-out infinite;
}

@keyframes particleFloat {
  0%, 100% {
    transform: translateY(0) translateX(0);
    opacity: 0.3;
  }
  25% {
    transform: translateY(-30rpx) translateX(10rpx);
    opacity: 0.8;
  }
  50% {
    transform: translateY(-60rpx) translateX(-10rpx);
    opacity: 0.5;
  }
  75% {
    transform: translateY(-30rpx) translateX(5rpx);
    opacity: 0.7;
  }
}

/* 雨天：雨滴效果 */
.rain-drops {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  overflow: hidden;
}

.rain-drop {
  position: absolute;
  width: 2rpx;
  height: 30rpx;
  background: linear-gradient(
    to bottom,
    rgba(255, 255, 255, 0.8) 0%,
    rgba(255, 255, 255, 0.4) 100%
  );
  border-radius: 2rpx;
  animation: rainFall linear infinite;
  box-shadow: 0 0 5rpx rgba(255, 255, 255, 0.5);
}

@keyframes rainFall {
  0% {
    transform: translateY(-100rpx);
    opacity: 1;
  }
  100% {
    transform: translateY(400rpx);
    opacity: 0.3;
  }
}

/* 多云：云朵效果 */
.clouds {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  overflow: hidden;
}

.cloud {
  position: absolute;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50rpx;
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.cloud::before,
.cloud::after {
  content: '';
  position: absolute;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50rpx;
}

.cloud-1 {
  width: 120rpx;
  height: 60rpx;
  top: 20%;
  left: 10%;
  animation: cloudMove1 20s linear infinite;
}

.cloud-1::before {
  width: 80rpx;
  height: 80rpx;
  top: -40rpx;
  left: 20rpx;
}

.cloud-1::after {
  width: 100rpx;
  height: 70rpx;
  top: -30rpx;
  right: 20rpx;
}

.cloud-2 {
  width: 100rpx;
  height: 50rpx;
  top: 50%;
  right: 15%;
  animation: cloudMove2 25s linear infinite;
}

.cloud-2::before {
  width: 70rpx;
  height: 70rpx;
  top: -35rpx;
  left: 15rpx;
}

.cloud-2::after {
  width: 80rpx;
  height: 60rpx;
  top: -25rpx;
  right: 15rpx;
}

.cloud-3 {
  width: 90rpx;
  height: 45rpx;
  bottom: 20%;
  left: 20%;
  animation: cloudMove3 30s linear infinite;
}

.cloud-3::before {
  width: 60rpx;
  height: 60rpx;
  top: -30rpx;
  left: 10rpx;
}

.cloud-3::after {
  width: 70rpx;
  height: 55rpx;
  top: -20rpx;
  right: 10rpx;
}

@keyframes cloudMove1 {
  0% { transform: translateX(0); }
  100% { transform: translateX(200rpx); }
}

@keyframes cloudMove2 {
  0% { transform: translateX(0); }
  100% { transform: translateX(-180rpx); }
}

@keyframes cloudMove3 {
  0% { transform: translateX(0); }
  100% { transform: translateX(150rpx); }
}

/* 雪天：雪花效果 */
.snowflakes {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  overflow: hidden;
}

.snowflake {
  position: absolute;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.8);
  animation: snowFall linear infinite;
  user-select: none;
}

@keyframes snowFall {
  0% {
    transform: translateY(-100rpx) translateX(0) rotate(0deg);
    opacity: 1;
  }
  100% {
    transform: translateY(500rpx) translateX(50rpx) rotate(360deg);
    opacity: 0.3;
  }
}

