/* pages/home/home.wxss */
.container {
  padding-top: 0;
  padding-bottom: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部导航栏 */
.top-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-left {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.location-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 50%;
  flex-shrink: 0;
}

.location-icon {
  font-size: 32rpx;
}

.region-selector {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  width: fit-content;
}

.region-text {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.arrow-down {
  font-size: 20rpx;
  color: #999;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.ranking-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
}

.ranking-icon {
  font-size: 28rpx;
  margin-right: 5rpx;
}

.ranking-text {
  font-size: 24rpx;
  color: #333;
}

/* 天气信息卡片 */
.weather-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 0 20rpx 20rpx 20rpx;
  padding: 40rpx;
  border-radius: 20rpx;
  color: #fff;
}

.weather-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.weather-left {
  display: flex;
  flex-direction: column;
}

.temperature {
  font-size: 72rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.weather-type {
  font-size: 28rpx;
  opacity: 0.9;
}

.weather-icon {
  font-size: 100rpx;
}

.weather-details {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.weather-item {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 120rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 15rpx;
  border-radius: 12rpx;
}

.weather-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.weather-value {
  font-size: 28rpx;
  font-weight: bold;
}

/* 轮播图 */
.banner-swiper {
  width: 100%;
  height: 400rpx;
  margin-top: 0;
  margin-bottom: 20rpx;
}

.banner-item {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  border-radius: 0;
}

.banner-title {
  font-size: 40rpx;
  font-weight: bold;
}

/* 排行榜轮播图 */
.ranking-banner {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  padding: 20rpx 25rpx;
  display: flex;
  flex-direction: column;
  color: #fff;
  box-sizing: border-box;
  overflow: hidden;
}

.ranking-header {
  margin-bottom: 15rpx;
  flex-shrink: 0;
}

.ranking-title {
  font-size: 28rpx;
  font-weight: bold;
}

.ranking-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  overflow: hidden;
}

.ranking-item {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 12rpx 15rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
  min-height: 80rpx;
}

.ranking-item.rank-first {
  background-color: rgba(255, 215, 0, 0.3);
  border: 2rpx solid rgba(255, 215, 0, 0.5);
}

.rank-number {
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.rank-first .rank-number {
  background-color: rgba(255, 215, 0, 0.5);
  width: 55rpx;
  height: 55rpx;
  font-size: 26rpx;
}

.rank-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
  overflow: hidden;
}

.rank-name {
  font-size: 26rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rank-spot {
  font-size: 22rpx;
  opacity: 0.8;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rank-weight {
  font-size: 26rpx;
  font-weight: bold;
  flex-shrink: 0;
  margin-left: 10rpx;
}

/* 功能入口 */
.function-entry {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  justify-content: space-between;
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  margin-bottom: 30rpx;
}

.entry-icon-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.entry-bg-1 {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.entry-bg-2 {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.entry-bg-3 {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.entry-bg-4 {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.entry-bg-5 {
  background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
}

.entry-bg-6 {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.entry-bg-7 {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
}

.entry-bg-8 {
  background: linear-gradient(135deg, #d299c2 0%, #fef9d7 100%);
}

.entry-icon {
  font-size: 50rpx;
}

.entry-text {
  font-size: 24rpx;
  color: #333;
}

/* 通用区域样式 */
.section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 商城区域特殊样式 */
.shop-section {
  padding: 30rpx 0 !important;
  width: 704rpx !important;
  display: block !important;
  box-sizing: content-box !important;
}

.shop-section .section-header {
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #999;
}

/* 商城推荐 */
.shop-swiper {
  width: 100%;
  height: 320rpx;
  margin-top: 20rpx;
}

.shop-item {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  overflow: hidden;
  margin: 0 5rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.shop-image {
  width: 100%;
  height: 200rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.image-placeholder {
  font-size: 60rpx;
}

.shop-name {
  padding: 15rpx;
  font-size: 26rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.shop-price {
  padding: 0 15rpx 15rpx 15rpx;
  font-size: 28rpx;
  color: #ff4757;
  font-weight: bold;
  flex-shrink: 0;
}

/* 住宿推荐 */
.hotel-list {
  display: flex;
  flex-direction: column;
}

.hotel-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.hotel-item:last-child {
  border-bottom: none;
}

.hotel-image {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.hotel-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.hotel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.hotel-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.hotel-rating {
  display: flex;
  align-items: center;
}

.hotel-distance {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.hotel-address {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.hotel-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
}

.hotel-price {
  font-size: 32rpx;
  color: #ff4757;
  font-weight: bold;
}

.hotel-tags {
  display: flex;
  gap: 10rpx;
}

.hotel-tag {
  font-size: 22rpx;
  color: #667eea;
  padding: 5rpx 12rpx;
  background-color: #e8f4ff;
  border-radius: 20rpx;
}

/* 优质钓场推荐 */

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.spots-list {
  display: flex;
  flex-direction: column;
}

.spot-item {
  display: flex;
  background-color: #f9f9f9;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.spot-image {
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.image-placeholder {
  font-size: 80rpx;
}

.spot-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.spot-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.spot-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.spot-rating {
  display: flex;
  align-items: center;
}

.rating-star {
  font-size: 24rpx;
  margin-right: 5rpx;
}

.rating-value {
  font-size: 24rpx;
  color: #ff9500;
}

.spot-distance {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.spot-address {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

/* 标签 */
.spot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  padding: 5rpx 15rpx;
  background-color: #e8f4ff;
  border-radius: 20rpx;
}

.tag-icon {
  font-size: 20rpx;
  margin-right: 5rpx;
}

.tag-text {
  font-size: 22rpx;
  color: #667eea;
}

/* 操作按钮 */
.spot-actions {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-top: auto;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
}

.phone-btn {
  background-color: #667eea;
  color: #fff;
}

.navigate-btn {
  background-color: #52c41a;
  color: #fff;
}

.btn-icon {
  font-size: 24rpx;
  margin-right: 5rpx;
}

.btn-text {
  font-size: 24rpx;
}

.spot-price {
  margin-left: auto;
  font-size: 32rpx;
  color: #ff4757;
  font-weight: bold;
}

/* 地区选择器 */
.region-picker-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.region-picker {
  width: 100%;
  background-color: #fff;
  border-radius: 30rpx 30rpx 0 0;
  padding: 30rpx;
  max-height: 60vh;
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.picker-close {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-content {
  display: flex;
  flex-direction: column;
}

.picker-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.picker-item:last-child {
  border-bottom: none;
}

.picker-item-text {
  font-size: 28rpx;
  color: #333;
}

.picker-item-text.selected {
  color: #667eea;
  font-weight: bold;
}

/* 导航栏右侧按钮 */
.navbar-right-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  margin-right: -15rpx;
}

.navbar-icon {
  font-size: 40rpx;
}

.picker-check {
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
}
