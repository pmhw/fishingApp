/* pages/profile/profile.wxss */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  width: 704rpx !important;
  display: block !important;
  box-sizing: content-box !important;
  margin: 0 auto;
  padding-top: 0;
}

/* 用户信息区域 */
.user-section {
  background-color: #ffffff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.user-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.user-main {
  display: flex;
  align-items: flex-start;
  flex: 1;
}

.user-avatar {
  margin-right: 25rpx;
}

.avatar-border {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #FF4757;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.avatar-icon {
  font-size: 60rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-title-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-right: 15rpx;
}

.level-badge {
  display: flex;
  align-items: center;
  padding: 5rpx 15rpx;
  background-color: #E8F4FF;
  border-radius: 20rpx;
}

.level-icon {
  font-size: 24rpx;
  margin-right: 5rpx;
  color: #87CEEB;
}

.level-text {
  font-size: 22rpx;
  color: #87CEEB;
  font-weight: 500;
}

/* 积分进度条 */
.points-progress {
  width: 100%;
}

.progress-label {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.label-text {
  font-size: 26rpx;
  color: #666;
}

.progress-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-left: auto;
  margin-right: 10rpx;
}

.arrow-right {
  font-size: 32rpx;
  color: #999;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FF6B9D 0%, #FF4757 100%);
  border-radius: 6rpx;
  transition: width 0.3s;
}

/* 签到按钮 */
.sign-in-btn {
  position: relative;
  padding: 15rpx 30rpx;
  background-color: #FF4757;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sign-text {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 500;
}

.sign-dot {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 12rpx;
  height: 12rpx;
  background-color: #FFD700;
  border-radius: 50%;
  border: 2rpx solid #ffffff;
}

/* 快捷功能入口 */
.quick-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.action-emoji {
  font-size: 40rpx;
}

.action-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-title {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.action-desc {
  font-size: 20rpx;
  color: #999;
}

.action-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 10rpx;
}

.more-icon {
  font-size: 40rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.more-text {
  font-size: 22rpx;
  color: #999;
}

/* 通用区域样式 */
.assets-section,
.orders-section,
.services-section {
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

/* 我的资产 */
.assets-grid {
  display: flex;
  justify-content: space-between;
}

.asset-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.asset-value-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  position: relative;
}

.asset-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.asset-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #FF4757;
  border-radius: 50%;
  margin-left: 8rpx;
}

.asset-name {
  font-size: 24rpx;
  color: #999;
}

/* 我的订单 */
.orders-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.order-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.order-icon-wrapper {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.order-icon {
  font-size: 48rpx;
}

.order-badge {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  min-width: 32rpx;
  height: 32rpx;
  background-color: #FF4757;
  color: #ffffff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  padding: 0 8rpx;
  border: 2rpx solid #ffffff;
}

.order-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 促销横幅 */
.promotion-banner {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 20rpx 20rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.banner-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.banner-logo {
  width: 100rpx;
  height: 100rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin-right: 20rpx;
}

.banner-content {
  display: flex;
  flex-direction: column;
}

.banner-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.banner-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

.banner-right {
  display: flex;
  align-items: center;
}

.banner-btn {
  padding: 15rpx 30rpx;
  background-color: #FF4757;
  border-radius: 50rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 服务与工具 */
.services-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.service-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.service-emoji {
  font-size: 40rpx;
}

.service-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 未登录状态 */
.not-logged-in {
  width: 100%;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  box-sizing: border-box;
}

.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.prompt-icon {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  margin-bottom: 40rpx;
}

.prompt-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.prompt-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 50rpx;
}

.prompt-btn {
  width: 400rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.prompt-btn::after {
  border: none;
}
